# The Joker - Agentic Terminal Configuration
# Copy this file to .env and fill in your values

# ============================================
# LM Studio Configuration
# ============================================
LM_STUDIO_BASE_URL=http://192.168.56.1:1234
LM_STUDIO_MODEL=qwen2.5-coder-14b-instruct-uncensored
LM_STUDIO_API_KEY=not-needed

# ============================================
# Agent Configuration
# ============================================
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_MS=60000
AGENT_VERBOSE=true

# ============================================
# Scraper Configuration
# ============================================
SCRAPER_HEADLESS=true
SCRAPER_TIMEOUT_MS=30000
SCRAPER_MAX_CONCURRENT=3
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/joker.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ============================================
# Terminal Configuration
# ============================================
TERMINAL_COLORS=true
TERMINAL_SPINNER=true

# ============================================
# Project Configuration (for agentic coding)
# ============================================
DEFAULT_PACKAGE_MANAGER=npm
DEFAULT_LANGUAGE=typescript
PROJECTS_DIR=./projects
